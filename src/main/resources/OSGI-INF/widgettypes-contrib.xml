              </widget>
            </layout>
          </layouts>
        </properties>
      </configuration>
      <handler-class>
        org.nuxeo.ecm.platform.forms.layout.facelets.plugins.TemplateWidgetTypeHandler
      </handler-class>
      <property name="template">
       /select2/select2_directory_widget_template.xhtml
      </property>
    </widgetType>
  </extension>

</component>