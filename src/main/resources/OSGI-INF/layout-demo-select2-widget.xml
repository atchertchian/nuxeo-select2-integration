<?xml version="1.0"?>

<component
  name="org.nuxeo.ecm.platform.forms.layoutDemo.select2Widget.contrib">

  <require>org.nuxeo.ecm.platform.forms.layoutDemo.contrib</require>

  <extension target="org.nuxeo.ecm.platform.forms.layout.WebLayoutManager"
    point="layouts">

    <layout name="select2WidgetLayout">
      <templates>
        <template mode="any">/layouts/layout_default_template.xhtml</template>
      </templates>
      <rows>
        <row>
          <widget>select2Widget</widget>
        </row>
      </rows>

       <widget name="select2Widget" type="select2Widget">
        <labels>
          <label mode="any">Simple (source)</label>
        </labels>
        <translated>true</translated>
        <fields>
          <field>dc:source</field>
        </fields>
        <properties mode="any">
          <property name="width">200</property>
          <property name="minimumInputLength">3</property>
          <property name="repository">layoutDemo</property>
          <property name="query">
            select * from Document where dc:title LIKE ?
          </property>
          <property name="documentSchemas">dublincore</property>
        </properties>
      </widget>
     </layout>
  </extension>

</component>
